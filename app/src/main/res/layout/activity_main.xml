<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#ffd438"
    >

    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" android:background="#ffd438">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="#2a292b"
            android:text="현재 위치   "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="위치설정"
            android:id="@+id/addrTv"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        android:text="지도"
        android:id="@+id/mapBtn"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"

        android:background="#2a292b">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/refresh"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textSize="20dp"
                android:text="업데이트 : 2021.06.16"
                android:textColor="#ffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="15dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_marginTop="80dp"
            android:padding="10dp"
            android:background="@drawable/border"

            >

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/stairs"
                android:layout_weight="0.5"/>
            <TextView
                android:layout_weight="0.5"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textColor="@color/colorPrimary"
                android:textSize="40dp"
                android:text="2.5 단계"
                android:gravity="center"
                android:id="@+id/stepTv"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginBottom="20dp"
           >
            <LinearLayout
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/border"
                android:id="@+id/peopleLimitLy">

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:background="@drawable/people"
                    android:layout_weight="0.5"
                    android:id="@+id/peopleLimitIv"/>
                <TextView
                    android:layout_weight="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:text="5인 이상 집합 금지"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:id="@+id/peopleLimitTv"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/border"
                android:id="@+id/timeLimitLy">

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:background="@drawable/time"
                    android:layout_weight="0.5"
                    android:id="@+id/timeLimitIv"/>
                <TextView
                    android:layout_weight="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:text="10시 제한"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:id="@+id/timeLimitTv"
                    />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>